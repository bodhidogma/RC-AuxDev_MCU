  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (OpenOCD)",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/Debug/RC-AuxDev_MCU.elf",
      "type": "cortex-debug",
      "request": "launch",
      "configFiles": [
        "interface/stlink.cfg", // Or the config file for your specific probe
        "target/stm32f3x.cfg" // Or the config file for your specific STM32 series
      ],
      "runToEntryPoint": "main",
      "showDevDebugOutput": "vscode", // parsed, vscode
      "servertype": "openocd",
      //"servertype": "stlink",
      //"swoConfig": {}
      "liveWatch": {
        "enabled": true,
        "samplesPerSecond": 5 // Optional: sets the refresh rate (e.g., 4 Hz)
      },
      "preLaunchTask": "Build project",
    }
  ]
}